{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ESNext",
		"removeComments": false,
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"types": ["node"],
		"paths": {
			"@app/*": ["./src/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@comp/*": ["./src/Components/*"],
			"@context/*": ["./src/Context/*"],
			"@style/*": ["./src/styles/*"],
			"@page/*": ["./src/Page/*"],
			"@applib/*": ["./src/Lib/*"],
			"@shared/*": ["./src/Shared/*"],
			"@server/*": ["./server/src/*"],
			"@/*": ["./*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"]
	},
	"include": ["shared/**/*.ts", "src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules"]
}
